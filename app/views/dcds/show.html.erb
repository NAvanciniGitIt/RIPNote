<center>
<h1><%= @dcd.first_name %> <%= @dcd.last_name %></h1>
  <%= image_tag(@dcd.picture, width: 200) if @dcd.picture.attached? %> 
<p>Relationship: <%= @dcd.relationship %></p> <!-- need to add user's name  -->
<p>Gender: <%= @dcd.gender %></p>
<p>Birthday: <%= @dcd.birthday %></p>
<p>Death Day:<%= @dcd.deathday %></p>


<%= link_to "Edit", edit_dcd_path(@dcd) %>
<%= link_to "Remove", dcd_path(@dcd), method: "delete" %>
  
<h3>Share Your Memories!</h3>
<% if @dcd.posts %> 
  <% @dcd.posts.each do |p| %>
  <div>
    <h2><%= p.title %></h2>
    <%= image_tag(p.picture, width: 200) if p.picture.attached? %>
    <p><%= p.post_content %></p>
  <%= link_to "See Post", post_path(p) %><br><br>
  </div>
  <% end %> 
<% end %>

<%= link_to "Add a Post", new_dcd_post_path(@dcd) %>
</center>



